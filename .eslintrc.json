{
    "env": {
        "node": true,
        "commonjs": true,
        "es2021": true,
        "browser": true
    },
    "extends": [
        "eslint:recommended", 
        "plugin:cypress/recommended", 
        "plugin:react/recommended",
        "plugin:jest/recommended"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "cypress",
        "react",
        "jest"
    ],
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "eqeqeq": "error",
        "no-trailing-spaces": "error",
        "object-curly-spacing": [
            "error", "always"
        ],
        "arrow-spacing": [
            "error", { "before": true, "after": true }
        ],
        "react/react-in-jsx-scope": "off"
    }
}
